# Copy to .env and adjust values

app.baseURL = 'http://localhost:8080/'
app.indexPage = ''
app.CSPEnabled = true

# Base path subfolder for reverse proxy deployments (default: served at root)
toolpages.basePath = '/'

encryption.key = ''

database.default.hostname = mariadb
database.default.database = toolpages
database.default.username = toolpages
database.default.password = toolpages
database.default.DBDriver = MySQLi
database.default.port = 3306

# Sessions
app.sessionDriver = 'CodeIgniter\\Session\\Handlers\\FileHandler'
app.sessionSavePath = "writable/session"

# LDAP settings
ldap.host = 'ldap'
ldap.port = 389
ldap.encryption = 'none' # none|ssl|tls
ldap.baseDN = 'dc=example,dc=org'
ldap.adminDN = ''
ldap.adminPassword = ''
ldap.uidAttribute = 'uid'
ldap.mailAttribute = 'mail'
## Optional: Fixed Group DN to restrict access (preferred simple option)
## Example:
##   cn=toolpages,ou=applications,ou=groups,dc=b-ramos,dc=de
ldap.groupDN = ''
## Optional: Group-Filter, um Zugriff auf eine Gruppe zu beschränken.
## Unterstützte Platzhalter: {dn}, {uid}
## Beispiele:
##   (memberOf=cn=toolpages,ou=groups,dc=example,dc=org)
##   (&(objectClass=groupOfNames)(cn=toolpages)(member={dn}))
ldap.groupFilter = ''

# Environment
CI_ENVIRONMENT = development
